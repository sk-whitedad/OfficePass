@model OfficePass.Areas.Adminka.Models.AddUserViewModel
@{
    ViewData["Title"] = "Пользователи";
}

<style>
    table {
        width: 100%; /* Ширина таблицы */
    }

    td {
        padding: 20px; /* Поля в ячейках */
        vertical-align: top; /* Выравнивание по верхнему краю ячеек */
    }
</style>
<span style="color:red">@ViewData["Error"]</span>
<h1 class="header-text-top">Добавление нового пользователя</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form">
            <form method="post" asp-area="Adminka" asp-action="AddUser" asp-controller="User">
                <div asp-validation-summary="All"></div>
                <table>
                    <tr style="vertical-align:top">
                        <td>
                            <p>
                                <label asp-for="Login"></label><br />
                                <input asp-for="Login" />
                            </p>
                            <p>
                                <label asp-for="Password"></label><br />
                                <input asp-for="Password" placeholder="" value="" />
                            </p>
                            <p>
                                <label asp-for="ConfirmPassword"></label><br />
                                <input asp-for="ConfirmPassword" />
                            </p>
                            <p>
                                <label asp-for="UserProfileId"></label><br />
                                <select asp-for="UserProfileId" asp-items="@ViewBag.SelectItemsUserProfile">
                                    <option selected=""></option>
                                </select>
                            </p>
                            <p>
                                <label asp-for="RoleId"></label><br />
                                <select asp-for="RoleId" asp-items="ViewBag.SelectItemsRole">
                                    <option selected=""></option>
                                </select>
                            </p>
                        </td>
                    </tr>
                </table>

                <p style="padding: 20px">
                    <input type="submit" value="Сохранить" />
                    <input type='button' asp-area="Adminka" value='Отменить' onclick='window.location = "@Url.Action("Index","User") ";' />
                </p>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}