@model OfficePass.Areas.Adminka.Models.UserProfileViewModel

@{
    ViewData["Title"] = $"Сотрудники";
}

<h3>Вы желаете удалить сотрудника?</h3>
<div id="left_menu">
    <ul class="nav">
        <li><a asp-action="Index" asp-controller="UserProfile">Сотрудники</a></li>
        <li><a asp-action="Index" asp-controller="Group">Подразделения</a></li>
        <li><a asp-action="Index" asp-controller="Specialization">Должности</a></li>
    </ul>
</div>

<div id="content">
    <hr />
    <dl class="table" style="padding:20px">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Specialization)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group)
        </dd>
    </dl>
    
    <form asp-action="DeleteUserProfile">
        <p style="padding: 20px">
            <input type="submit" value="Удалить"/>
            <input type='button' asp-area="Adminka" value='Отменить' onclick='window.location = "@Url.Action("Index")";' />
        </p>
    </form>
</div>
