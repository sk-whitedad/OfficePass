@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="header-text-top">Вход</h1>

<hr />
<div class="row">
    <div class="ol-md-4">
        <div class="form">
            <form asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="All"></div>
                <p>
                    <input asp-for="UserName" placeholder="Имя пользователя" value="">
                </p>
                <p>
                    <input asp-for="Password" placeholder="Пароль" value="">
                </p>
                <p>
                    <input type="submit" value="Войти" />
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}