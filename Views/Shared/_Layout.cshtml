<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Бюро пропусков</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">БюроКрат</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Index">БюроКрат</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a class="nav-link" asp-area="Adminka" asp-controller="User" asp-action="Index">Пользователи</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="Adminka" asp-controller="UserProfile" asp-action="Index">Сотрудники</a>
                                </li>
                            }
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Guest" asp-action="Index">Посетители</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Company" asp-action="Index">Компании</a>
                            </li>

                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        string name = User.Identity.Name;
                        <label class="user-name-header">@name</label>
                        <a asp-controller="" asp-action="">
                            <svg width="25"
                                 height="25"
                                 viewBox="0 0 211.66666 211.66667"
                                 version="1.1"
                                 id="svg701"
                                 inkscape:version="1.2.2 (732a01da63, 2022-12-09)"
                                 sodipodi:docname="Contactos.svg"
                                 xmlns:inkscape="http://www.inkscape.org/namespaces/inkscape"
                                 xmlns:sodipodi="http://sodipodi.sourceforge.net/DTD/sodipodi-0.dtd"
                                 xmlns="http://www.w3.org/2000/svg"
                                 xmlns:svg="http://www.w3.org/2000/svg">
                                <sodipodi:namedview id="namedview703"
                                                    pagecolor="#ffffff"
                                                    bordercolor="#000000"
                                                    borderopacity="0.25"
                                                    inkscape:showpageshadow="2"
                                                    inkscape:pageopacity="0.0"
                                                    inkscape:pagecheckerboard="0"
                                                    inkscape:deskcolor="#d1d1d1"
                                                    inkscape:document-units="mm"
                                                    showgrid="false"
                                                    inkscape:zoom="0.73851712"
                                                    inkscape:cx="280.96844"
                                                    inkscape:cy="408.92756"
                                                    inkscape:window-width="1920"
                                                    inkscape:window-height="1009"
                                                    inkscape:window-x="-8"
                                                    inkscape:window-y="-8"
                                                    inkscape:window-maximized="1"
                                                    inkscape:current-layer="layer1" />
                                <defs id="defs698" />
                                <g inkscape:label="Capa 1"
                                   inkscape:groupmode="layer"
                                   id="layer1">
                                    <g id="g3707"
                                       transform="matrix(2.6933873,0,0,2.6933873,-581.61533,-77.758105)">
                                        <circle style="fill:#04738f;fill-opacity:1;stroke:none;stroke-width:0.599413;stroke-opacity:1"
                                                id="circle3612"
                                                cx="255.31462"
                                                cy="68.375687"
                                                r="37.658726" />
                                        <circle style="fill:#ffffff;fill-opacity:1;stroke:none;stroke-width:0.112987;stroke-dasharray:none;stroke-opacity:1"
                                                id="path3684"
                                                cx="255.31462"
                                                cy="57.684757"
                                                r="8.1383572" />
                                        <path style="fill:#ffffff;fill-opacity:1;stroke:none;stroke-width:0.106286;stroke-dasharray:none;stroke-opacity:1"
                                              id="path3686"
                                              sodipodi:type="arc"
                                              sodipodi:cx="255.31462"
                                              sodipodi:cy="-85.431442"
                                              sodipodi:rx="17.399246"
                                              sodipodi:ry="17.399246"
                                              sodipodi:start="0"
                                              sodipodi:end="3.1534264"
                                              sodipodi:open="true"
                                              sodipodi:arc-type="arc"
                                              d="m 272.71387,-85.431442 a 17.399246,17.399246 0 0 1 -8.75913,15.102388 17.399246,17.399246 0 0 1 -17.45835,-0.1033 17.399246,17.399246 0 0 1 -8.5798,-15.204982"
                                              transform="scale(1,-1)" />
                                    </g>
                                </g>
                            </svg>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" margin-bottom: 100px>
        <div class="container">
            &copy; 2024 - OfficePass - <a asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
